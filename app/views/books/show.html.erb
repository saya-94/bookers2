<div class="container">
  <div class="row">
    <div class="col-sm-3"><%= render 'users/input', user: @book.user %></div>


    <div class="col-sm-9">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "mini_no_image.jpg" %>
                <br><%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title %></td>
              <td><%= @book.body %></td>


             <% if @book.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success btn-sm' %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-danger btn-sm' %></td>
             <% end %>


            </tr>
          </tbody>
        </table>


    </div>


    </div>
    </div>

<%= render 'books/footer_list' %>

